<html>
    <head>
        <style>
            body {
                background-color: lightgrey;
            }

            button {
                border: none;
                background-color: white;
                text-align: center;
                display: block;
                font-size: 16px;
                font-weight: bold;
                margin: 4px;
            }

            .navigator {
                float: left;
                background-color: white;
            }

            .discover {
                float:left;
                margin: 1% 3%;
                background-color: lightgrey;
            }

            button:hover {
                background-color: lightgrey;
            }

            .groups {
                display:flex;
            }
        </style>

    </head>

    <body>
        <div class="navigator">
            <h2> Groups </h2>
            <form action="/facebook/<%= person.id %>/groups/discover" method="POST">
                <button type="submit" name="button" value="feed"><i class="fa fa-newspaper-o"></i>Your Feed</button>
                <button type="submit" name="button" value="discover"><i class="fa fa-compass"></i>Discover</button>
                <button type="submit" name="button" value="groups"><i class="fa fa-group"></i>Your Groups</button>
                <button style="background-color: aqua;" type="submit" name="button" value="create"> Create Group </button>
                <br />
                <h3> Groups you've joined </h3>
                <% for(let group of groups) { %>
                    <button type="submit" name="button" value="<%= group.id %>"><img src="https://www.w3schools.com/images/w3schools_green.jpg" alt="W3Schools.com" style="width:50px;height:50px;">
                        <%= group.name %> <p style="color:gray">Last active <%= group.last_active %>m ago</p></button>
                <% } %>
            </form>
        </div>

        <div class="discover">
            <h2> Friends' groups </h2>
            <h3 style="color: gray;"> Groups your friends are in. </h3>
            <% for(let group of fgroups) { %>
                
            <% } %>
            <br>
            <h2> More Suggestions </h2>
            <form class="groups" action="/facebook/<%= person.id %>/groups/discover" method="POST">
                <% for(let group of sgroups) { %>
                    <div style="border-radius: 25px;background-color: white;margin: 10px;">
                        <h4> <%= group.name %></h4>
                        <p style="color: gray;"> <%= group.numofmembers %> members | <%= group.average_posts %></p>
                        <p style="color: gray;"> John Doe is a member </p>
                        <button style="text-align: center;" type="submit" name="join" value="<%= group.id %>">Join</button>
                    </div>    
                <% } %>
            </form>
        </div>
    </body>
</html>